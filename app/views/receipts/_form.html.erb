<%= form_for(receipt) do |f| %>
  <% if receipt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(receipt.errors.count, "error") %> prohibited this receipt from being saved:</h2>

      <ul>
      <% receipt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <dl class="field">
    <dt><%= f.label :date %>
    <dd><%= f.date_select :date %>
  </dl>

  <dl class="field">
    <dt><%= f.label :store_id %>
    <dd><%= f.select :store_id , store_list %>
  </dl>

  <dl class="field">
    <dt><%= f.label :receipt_details %>
    <dd>
      <table>
        <%= f.fields_for :receipt_details do |receipt_detail| %>
          <%= receipt_detail.hidden_field :id %>
          <tr>
            <th><%= receipt_detail.label :name %>
            <td><%= receipt_detail.text_field :name %>
            <th><%= receipt_detail.label :price %>
            <td><%= receipt_detail.number_field :price %>
          </tr>
        <% end %>
      </table>
    </dd>
  </dl>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
