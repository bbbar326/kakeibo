<p id="notice"><%= notice.html_safe if notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Store</th>
      <th>Pay</th>
      <th>Detail</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.date %></td>
        <td><%= receipt.store.name %></td>
        <td>
          <% if receipt.pay_account.present? %>
            <%=receipt.pay_account.name %>
          <% end %>
        </td>
        <td>
          <table>
            <% receipt.receipt_details.each do |receipt_detail| %>
              <tr>
                <td width="300px;"><%=receipt_detail.name %>
                <td width="50px;">ï¿¥<%=receipt_detail.price %>
              </tr>
            <% end %>
          </table>
        </td>
        <td>
          <%= link_to 'Show', receipt %><br/>
          ------<br/>
          <%= link_to 'Edit', edit_receipt_path(receipt) %><br/>
          ------<br/>
          <%= link_to 'Destroy', receipt, method: :delete, 
          data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

