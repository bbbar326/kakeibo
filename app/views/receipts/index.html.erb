<p id="notice"><%= notice.html_safe if notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Store</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.date %></td>
        <td><%= receipt.store.name %></td>
        <td>
          <table>
            <% receipt.receipt_details.each do |receipt_detail| %>
              <tr>
                <td><%=receipt_detail.name %>
                <td>ï¿¥<%=receipt_detail.price %>
              </tr>
            <% end %>
          </table>
        </td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

