<p id="notice"><%= notice %></p>

<h1>Pay Accounts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_accounts.each do |pay_account| %>
      <tr>
        <td><%= pay_account.id %></td>
        <td><%= pay_account.name %></td>
        <td><%= link_to 'Show', pay_account %></td>
        <td><%= link_to 'Edit', edit_pay_account_path(pay_account) %></td>
        <td><%= link_to 'Destroy', pay_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pay Account', new_pay_account_path %>
